#! /usr/bin/env python3.10

import os, sys
from src.util import Log
from src.webscraper import get, get_hyper, get_site
from src.validator import verify
#from src.harvester import harvest

#global vars
targets:list[str] = []
rules:list[str] = []
scan_data:list[str] = []
h_rules:list[str] = []
filters:dict = {'http-ver':None, 'verify-method':None}

def title() -> None:
	"""Prints out Ascii Art title"""
	print(f"\t\t\033[38;2;255;218;69m _____\033[38;2;73;231;236m     _____           _ \n\t\t\033[38;2;255;218;69m|  _  |_ _\033[38;2;73;231;236m'  |  |_ _ ___ _| |\n\t\t\033[38;2;255;218;69m|   __| | |\033[38;2;73;231;236m     | | |   | . |\n\t\t\033[38;2;255;218;69m|__|  |_  |\033[38;2;73;231;236m__|__|___|_|_|___|\n\t\t\033[38;2;255;218;69m      |___|\033[0;0;0m")

def display_help() -> None:
	"""Displays Pyhund's help"""
	title()
	print(f"\n\033[38;2;255;247;248m[\033[38;2;202;254;1mPyHund Help\033[38;2;255;247;248m]\n\n\033[38;2;202;254;1mUsage\033[0;0m\n\n\t\033[38;2;255;247;248mPyHund \033[38;2;73;231;236m-t \033[38;2;255;247;248mtargets \033[38;2;73;231;236m-s \033[38;2;255;247;248mscantype \033[38;2;73;231;236m--rule \033[38;2;255;247;248m... \033[38;2;73;231;236m--harvest \033[38;2;255;218;69m%harvester-opt ...\033[0;0m\n\n\033[38;2;202;254;1mRequired Args\033[0;0m\n  \033[38;2;73;231;236m-t\t\t\033[0;0m[\033[38;2;202;254;1mTarget(s)\033[0;0m] \033[38;2;255;247;248mSets the target or targets to search for\033[0;0m\n  \033[38;2;73;231;236m-s\t\t\033[0;0m[\033[38;2;202;254;1mScantype\033[0;0m] \033[38;2;255;247;248mSets the scantype to be used for scan\033[0;0m\n  \033[38;2;73;231;236m-f\t\t\033[0;0m[\033[38;2;202;254;1mFlag(s)\033[0;0m] \033[38;2;255;247;248mSets flags for filtering output [http-ver / validation-method]\033[0;0m\n\n\033[38;2;202;254;1mRules\033[0;0m\n  \033[38;2;73;231;236m--no-url\t\033[0;0m[\033[38;2;202;254;1mNo Url\033[0;0m] \033[38;2;255;247;248mWill not display the url of the site when found\033[0;0m\n  \033[38;2;73;231;236m--no-err\t\033[0;0m[\033[38;2;202;254;1mNo Error\033[0;0m] \033[38;2;255;247;248mWill not show bad responses\033[0;0m\n  \033[38;2;73;231;236m--log\t\t\033[0;0m[\033[38;2;202;254;1mLogging\033[0;0m] \033[38;2;255;247;248mLogs output to file\033[0;0m\n\n\033[38;2;202;254;1mHarvester\033[0;0m\n\n  \033[38;2;202;254;1mhtml\033[38;2;255;247;248m Formats harvested data for html document\033[0;0m\n  \033[38;2;202;254;1mraw\033[38;2;255;247;248m  Provides no formatting but re-routes output to txt file\033[0;0m\n  \033[38;2;202;254;1mjson\033[38;2;255;247;248m formats output to a json format\033[0;0m\n")
	sys.exit()

def check_args() -> None:
	"""Checks arguments and sets pertinent data"""
	
	if '-t' not in sys.argv or 'help' in sys.argv or len(sys.argv) == 1:
		display_help()

	global targets
	global scan_data
	global rules
	global harvest
	global h_rules
	global filters

	for _t in sys.argv[sys.argv.index('-t') + 1:]:
		if _t.startswith('-'):
			break
		targets.append(_t)
	Log(targets)

	if '-f' in sys.argv:
		for _filter in sys.argv[sys.argv.index('-f')+1:]:
			if _filter.startswith('-'):
				break
			if _filter.startswith('http-ver'):
				Log('HTTPVER - DETECTED')
				try:
					filters['http-ver'] = int(_filter.split('=')[-1])
				except ValueError:
					print('\033[38;2;255;0;35mhttp-ver must be an int\033[0m')
			elif _filter.startswith('verify-method'):
				Log('VERIFYMETHOD - DETECTED')
				filters['verify-method'] = _filter.split('=')[-1].split(',')

	#TODO add to display help '-S\t[sites] Used to add sites to be scanned'
	if '-S' in sys.argv:
		for _s in sys.argv[sys.argv.index('-S') + 1:]:
			if _s.startswith('-'):
				break
			scan_data.append(_s.lower())
	else:
		scan = sys.argv[sys.argv.index('-s') + 1]
		try:
			scan_data = open('lib/scans/'+scan, 'r').read().split('\n')
		except FileNotFoundError:
			print('\033[38;2;255;0;35mScan not recognized!\033[0;0m')
			sys.exit()		

	Log(len(scan_data))

	rules = [ _r for _r in sys.argv if _r.startswith('--') ]
	Log(rules)
	if '--harvest' in rules:
		harvest = True
		h_rules = [_hr for _hr in sys.argv if _hr.startswith('%') ]
	Log(h_rules)

def scan_clients() -> None:
	"""Starts scanning provided clients"""

	for target in targets:
		print('\033[38;2;202;254;1m'+target+'\033[0;0;0m')
		for site in scan_data:
			if not site:
				continue

			Log(site)
			site_data:dict = get_site(site)

			if not site_data:
				continue

			Log(filters)

			if filters['http-ver']:
				if site_data['http-version'] != filters['http-ver']:
					continue
			if filters['verify-method']:
				if site_data['verify-method'] not in filters['verify-method']:
					continue

			if site_data['http-version'] == 1:
				data = get(site, target)
			elif site_data['http-version'] == 2:
				data = get_hyper(site, target)
			else:
				Log(f"{C1}Unknown http-version{C3}", site_data['http-version'], '\033[0m')
				continue

			display_response(target, site, data, verify(site, data))
		print('')


def display_response(target:str, site:str, data, is_valid:bool) -> None:
	"""Displays response for site based on rules"""

	if not is_valid and '--no-err' not in rules:
		print(f"\033[38;2;255;0;35m[!] \033[38;2;255;218;69m{site}\033[0;0;0m")
	elif not is_valid:
		pass
	elif is_valid and '--no-url' in rules:
		print(f"\t\033[38;2;255;218;69m {site} \033[0;0;0m")
	else:
		print(f"\t\033[38;2;255;218;69m{site}\033[38;2;73;231;236m {data.url} \033[0;0;0m")

def main() -> None:
	try:
		check_args()
	except IndexError:
		sys.exit()
	try:
		scan_clients()
	except KeyboardInterrupt:
		print(f"\r\033[38;2;255;0;35mTerminated\033[0m")

if __name__ == '__main__':
	Log(f"Debug [\033[38;2;202;254;1mON\033[0;0m]")
	main()
	Log("Program Terminated")
